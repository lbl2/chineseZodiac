	@Override
	public void actionPerformed(ActionEvent x) {
		// TODO Auto-generated method stub
		//think about if there are any other features to add!
try {
			 String text = tField2.getText();
	           int num = Integer.parseInt(text);
		
	if(x.getSource() == enter) {
				tField1.setText(Animals.setZodiac(num));
				}
	if(x.getSource() == fnl) {
		       tField1.setText(Fnl(num));
	}   
		if(x.getSource() == acl) {
		tField1.setText(Acl(num));;
	}   
	if(x.getSource() == rml) {
		tField1.setText(Rml(num));
	}
}catch(Exception a) {
	tField2.setText("Error here! :" + a + "Please input a proper value!");
}
